{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "emulators": {
    "functions": {
      "port": "5000"
    },
    "firestore": {
      "port": "8080"
    },
    "database": {
      "port": "9001"
    },
    "hosting": {
      "port": "5003"
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
